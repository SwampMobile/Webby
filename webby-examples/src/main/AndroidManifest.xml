<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swampmobile.webby.examples" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.swampmobile.webby.examples.activities.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.swampmobile.webby.examples.activities.WebbyActivity"
            android:label="@string/title_activity_webby"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.swampmobile.webby.examples.activities.WebbyFragmentActivity"
            android:label="@string/title_activity_webby_fragment"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
